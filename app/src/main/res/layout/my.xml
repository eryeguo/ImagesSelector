<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_colorful"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/my_set"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_colorful"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_c"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/version"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史"
                 android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                />
             <ImageView
                 android:layout_marginLeft="350dp"
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:background="@drawable/right"
                 />
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/recyq"
            >

        </android.support.v7.widget.RecyclerView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_d"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/like"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_marginLeft="350dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/right"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_e"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/collection"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_marginLeft="350dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/right"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_f"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/my_everyone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主题"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_marginLeft="350dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/right"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d5d5d5"
            />
    </LinearLayout>



</RelativeLayout>